@page
@model ClassDemoRunApp.Pages.runs.EditModel
@{
}
<h1>Opdater Medlem nummer @Model.Id @Model.Navn</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Id" class="form-control" /><br>
            </div>

            <div class="form-group">
                <label>Navn</label><br>
                <input asp-for="@Model.Navn" class="form-control" /><br />
                <span asp-validation-for="@Model.Navn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Mobil</label><br>
                <input asp-for="@Model.Mobil" class="form-control" /><br />
                <span asp-validation-for="@Model.Mobil" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Hold</label><br>
                <input asp-for="@Model.Hold" class="form-control" /><br />
                <span asp-validation-for="@Model.Hold" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.ErrorHold))
                {
                    <div class="text-danger">@Model.ErrorHold</div>
                }
            </div>

            <div class="form-group">
                <label>Pris</label><br>
                <input asp-for="@Model.Price" class="form-control" /><br />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

            <form method="post">
                <div class="form-group">
                    <input type="submit" value="Edit" asp-page-handler="Edit" asp-route-id="@Model.Id" class="btn btn-success" />

                    <input type="submit" value="Fortryd" asp-page-handler="Fortryd" class="btn btn-primary" />
                </div>
            </form>

        </form>
    </div>
</div>